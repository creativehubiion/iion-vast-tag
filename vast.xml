<?xml version="1.0" encoding="UTF-8"?>
<!--
    iion VAST Tag - Main Entry Point

    GAM points to this file. It redirects to the current creative's VAST XML
    with cache-busting parameters.

    IMPORTANT: This is a VAST Wrapper that points to the actual creative.
    Update the VASTAdTagURI below only if you change the creative location.
-->
<VAST version="4.2" xmlns="http://www.iab.com/VAST">
    <Ad id="iion-wrapper">
        <Wrapper followAdditionalWrappers="0" allowMultipleAds="0">
            <AdSystem version="1.0">iion Ad Server</AdSystem>

            <!--
                This wrapper redirects to the actual VAST creative.
                The [timestamp] macro will be replaced by the ad player with current time.
                If your player doesn't support macros, the creative's VAST handles cache-busting internally.
            -->
            <VASTAdTagURI><![CDATA[creatives/current/vast.xml?cb=[timestamp]]]></VASTAdTagURI>

            <Error><![CDATA[https://example.com/error?code=[ERRORCODE]]]></Error>

            <Impression id="iion-wrapper-impression"><![CDATA[https://example.com/impression?type=wrapper]]></Impression>

            <Creatives></Creatives>
        </Wrapper>
    </Ad>
</VAST>
